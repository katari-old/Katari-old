<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>dev/target</directory>
      <includes>
        <include>user-manual.pdf</include>
        <include>release-notes.pdf</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>dev/katari-sample/target</directory>
      <includes>
        <include>katari-sample.war</include>
        <include>katari-sample.ddl</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>dev/katari-sample/src/main/sql</directory>
      <includes>
        <include>db-setup.sql</include>
      </includes>
    </fileSet>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>dev/katari-sample/src/test/resources</directory>
      <includes>
        <include>katari.properties</include>
        <include>log4j.properties</include>
      </includes>
    </fileSet>
    <!-- The pdf files. -->
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>dev/target/site/pdf</directory>
      <includes>
        <include>user-manual.pdf</include>
        <include>release-notes.pdf</include>
      </includes>
    </fileSet>
    <!-- The main site. -->
    <fileSet>
      <outputDirectory>/doc</outputDirectory>
      <directory>dev/target/site</directory>
      <includes/>
    </fileSet>
    <!-- We copy each module. -->
    <fileSet>
      <outputDirectory>/doc/katari-core</outputDirectory>
      <directory>dev/katari-core/target/site</directory>
      <includes/>
    </fileSet>
    <fileSet>
      <outputDirectory>/doc/katari-style</outputDirectory>
      <directory>dev/katari-style/target/site</directory>
      <includes/>
    </fileSet>
    <fileSet>
      <outputDirectory>/doc/katari-sample</outputDirectory>
      <directory>dev/katari-sample/target/site</directory>
      <includes/>
    </fileSet>
    <fileSet>
      <outputDirectory>/doc/katari-classic-menu</outputDirectory>
      <directory>dev/katari-classic-menu/target/site</directory>
      <includes/>
    </fileSet>
    <fileSet>
      <outputDirectory>/doc/katari-tools</outputDirectory>
      <directory>dev/katari-tools/target/site</directory>
      <includes/>
    </fileSet>
    <fileSet>
      <outputDirectory>/doc/katari-reporting</outputDirectory>
      <directory>dev/katari-reporting/target/site</directory>
      <includes/>
    </fileSet>
    <fileSet>
      <outputDirectory>/doc/katari-ajax</outputDirectory>
      <directory>dev/katari-ajax/target/site</directory>
      <includes/>
    </fileSet>
  </fileSets>
