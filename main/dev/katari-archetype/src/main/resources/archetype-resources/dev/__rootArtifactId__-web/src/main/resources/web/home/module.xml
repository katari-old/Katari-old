#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:katari="http://www.globant.com/schema/katari"
      xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
      http://www.globant.com/schema/katari
      http://www.globant.com/schema/katari/katari.xsd">

  <!-- The home module configuration file. This file must be included in the
  application context to use this module. -->

  <bean id="home.module"
      class="com.globant.katari.core.web.ConfigurableModule">

    <!-- The menu bar. -->
    <property name='menuBar'>
      <katari:menuBar>
        <katari:menuItem name='Home' link='${symbol_dollar}{editable-pages.module}/page/home'
          position='-1000' />
      </katari:menuBar>
    </property>

  </bean>
</beans>

