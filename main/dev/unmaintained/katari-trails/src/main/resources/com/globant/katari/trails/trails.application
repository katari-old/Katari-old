<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE application
    PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.1//EN"
    "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_1.dtd">

<application name="trails">

  <description></description>

  <library id="trails"
    specification-path="/org/trails/component/trails_hibernate.library"/>
  <library id="contrib"
    specification-path="/org/apache/tapestry/contrib/Contrib.library"/>
  <library id="tacos" specification-path="/net/sf/tacos/Tacos.library"/>

  <meta key="org.apache.tapestry.accepted-locales" value="en,es_AR,pt"/>
  <meta key="org.apache.tapestry.renderTags" value="false"/>

  <!-- Configures the location of the components and pages. -->
  <meta key="org.apache.tapestry.page-class-packages"
    value="com.globant.katari.trails.pages, org.trails.page"/>
  <meta key="org.apache.tapestry.component-class-packages"
    value="com.globant.katari.trails.components, org.trails.component, org.trails.component.blob, org.trails.link"/>

</application>

